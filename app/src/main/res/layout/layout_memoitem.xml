<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data class="MemoItemLayoutBind">
        <import type="android.view.View" />
        <import type="android.view.View.OnClickListener"/>
        <import type="android.view.View.OnLongClickListener"/>
        <import type="com.crash.alpaca.utils.TextUtils"/>
        <variable name="memo" type="com.crash.alpaca.data.Memo" />
        <variable name="isSelected" type="boolean" />
        <variable name="itemClickListener" type="OnClickListener"/>
        <variable name="itemLongClickListener" type="OnLongClickListener"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <ImageView
            android:id="@+id/memoCheck"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_checkmark_outline"
            android:visibility="@{isSelected ? View.VISIBLE : View.GONE, default=gone}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/memoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMemoText"
            android:textSize="14sp"
            android:text="@{memo.content}"
            android:background="@drawable/bg_memo"
            android:padding="10dp"
            android:onClick="@{itemClickListener}"
            app:bindLongClickListener="@{itemLongClickListener}"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/memoTimestampText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMemoTimestamp"
            android:textSize="10sp"
            android:text="@{TextUtils.getMemoTimestamp(memo.time)}"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:layout_constraintRight_toLeftOf="@id/memoText"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>